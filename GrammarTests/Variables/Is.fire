Package GrammarTests.Variables;

Use "FooObject";

Tests;

Test Integer_Type {
	var x = 1;
	Assert x is integer;
	Assert x is number;
	Assert x is not float;
}

Test Float_Type {
	var x = 2.3;
	Assert x is float;
	Assert x is number;
	Assert x is not integer;
}

Test String_Type {
	var x = "thing";
	Assert x is string;
	Assert x is not regex;
}

Test Regex_Type {
	var x = /thing/;
	Assert x is string;
	Assert x is regex;
}

Test Function_Type {
	var x = function { return "thing"; };
	Assert x is function;
}

Test Object_Type {
	var x = new GrammarTests.Variables.FooObject();
	Assert x is object;
}

Test Array_Type {
	var x = [1,2,3];
	Assert x is array;
}