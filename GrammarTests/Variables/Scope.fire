Tests;

Test Isset_Test {
	var x;
	Assert isset x;
};

Test Not_Isset_Test {
	Assert not isset x;
};

Test Isset_Variable_Function_Test {
	var foo = function() {
		return "done";
	};
	Assert isset foo;
};

Test Isset_Function_Test {
	function foo {
		return "done";
	};
	Assert isset foo;
};

Test Isset_Function_Scope_Test {
	var x = 4;
	var foo = function {
		Assert isset x;
		return "done";
	};
	function boo {
		Assert isset x;
		return "done";
	};
	Assert foo() == "done";
	Assert boo()  == "done";
};

Test Isset_Deep_Scope_Test {
	var x = 4;
	var foo = function {
		var boo = function {
			var zoo = function {
				Assert isset x;
				return "done";
			};
			Assert zoo() == "done";
			return "done";
		};
		Assert boo() == "done";
		return "done";
	};
	Assert foo() == "done";
	Assert not isset boo;
	Assert not isset zoo;
};