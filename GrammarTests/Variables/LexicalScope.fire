Tests;

Test Scope_Function_Decl_Test {
	var x = "Far away";
	
	function foo() {
		var str = "Hello";
		function boo() with (str) {
			Assert isset x;
			Assert isset str; // should be attached to the closure.
		}
		Assert isset str;
		Assert isset boo;
		return boo;
	}
	
	var woo = foo();
	woo();
}

Test Scope_Function_Var_Test {
	var x = "Far away";
	
	var foo = function {
		var str = "Hello";
		var boo = function with (str) {
			Assert isset x;
			Assert isset str; // should be attached to the closure.
		};
		Assert isset str;
		Assert isset boo;
		return boo;
	};
	
	var woo = foo();
	woo();
}
