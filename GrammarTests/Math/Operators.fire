Package GrammarTests.Math;

Tests;

Test Add {
	Assert 1+1==2;
	Assert 2+3==5;
	Assert 2.1+1==3.1;
	Assert "abc"+"123" == "abc123";
	Assert [1,2,3] + ["a","b","c"] == [1,2,3,"a","b","c"];
}

Test Sub {
	Assert 3-1 == 2;
	Assert 0-0 == 0;
	Assert 2.1 - 0.9 == 1.2;
	Assert [1,2,3,4,5,6] - [3,2,1] == [4,5,6];
	Assert "abc123" - "c1" == "ab23";
}

Test Divide {
	Assert 8 / 4 == 2;
	Assert "The Old House" / " " == ["The","Old","House"];
	Assert 10 / 4 == 2.5;
	Assert [1,2,3,4,5] / 3 == [1,2,3];
}

Test Multiple{
	Assert 2 * 4 == 8;
	Assert 10 * 0.25 == 2.5;
	Assert "a" * 5 == "aaaaa";
	Assert [1,2,3] * 4 == [1,2,3,1,2,3,1,2,3,1,2,3];
}
