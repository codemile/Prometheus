Tests;

Test While_Test {
	var x = 0;
	While (x < 10) {
		x = x +1;
	};
	Assert x == 10;
};

Test While_Break_Test {
	var x = 0;
	While (x < 10) {
		x = x +1;
		Break;
	};
	Assert x == 1;
};

Test While_Continue_Test {
	var x = 0;
	var y = 0;
	While (x < 10) {
		x = x +1;
		Continue;
		y = 99;
	};
	Assert y == 0;
};

